<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>
    <h2>EXPENSES</h2> <br>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
        <th>Amount</th>
        <th>Description</th>
        <th>Date</th>
        <th>USER ID</th>
        <th>View Exp</th>
        </tr>
    </thead>

    <tbody>
        <% @expenses.each do |expense| %>
            <% if expense.user == current_user %>
                <div class="view">
                    <tr>
                        <td><h5> <%= expense.title %> </h5></td>
                        <td><h6> <%= expense.body %> </h6></td>
                        <td><h6> <%= expense.date %> </h6></td>
                        <td><h6> <%= expense.user_id %> </h6></td>

                        <td><%= link_to "View more", expense_path(expense), :class => 'btn btn-light' %></td>
                </div>
            <% end %>
        <% end %>
    </tbody>
</table>






