<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <h1>Friends Lists</h1>

  <table class="table table-striped table-bordered table-hover" >
    <thead class="table-danger" >
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>Userid</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.user_id %></td>

          <td><%= link_to 'Show', friend, class: 'btn btn-light' %></td>
          <td><%= link_to 'Edit', edit_friend_path(friend), class: 'btn btn-light' %></td>
          <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, 
                  class: 'btn btn-light' %></td>
        
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class: 'btn btn-primary' %>

  <% else %>
    <h1><p class="text-danger"><marquee> Please Login...! </marquee></p></h1>

<% end %>